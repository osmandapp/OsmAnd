<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="false">
		<shape android:shape="rectangle">
			<solid android:color="@color/color_warning_alpha_high" />
			<corners android:bottomRightRadius="@dimen/radius_small"
				android:bottomLeftRadius="@dimen/radius_small"
				android:topRightRadius="@dimen/radius_small"
				android:topLeftRadius="@dimen/radius_small"/>
		</shape>
	</item>

	<item android:state_pressed="true">
		<shape android:shape="rectangle">
			<solid android:color="@color/color_warning_alpha_low" />
			<corners android:bottomRightRadius="@dimen/radius_small"
				android:bottomLeftRadius="@dimen/radius_small"
				android:topRightRadius="@dimen/radius_small"
				android:topLeftRadius="@dimen/radius_small"/>
		</shape>
	</item>

</selector>