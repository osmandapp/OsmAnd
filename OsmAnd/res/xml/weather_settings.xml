<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:title="@string/shared_string_weather">

	<PreferenceCategory
		android:key="measurement_units"
		android:layout="@layout/preference_category_with_descr"
		android:title="@string/measurement_units" />

	<net.osmand.plus.settings.preferences.ListPreferenceEx
		android:icon="@drawable/ic_action_thermometer"
		android:key="map_settings_weather_temp"
		android:layout="@layout/preference_with_descr"
		android:title="@string/map_settings_weather_temp" />

	<net.osmand.plus.settings.preferences.ListPreferenceEx
		android:icon="@drawable/ic_action_air_pressure"
		android:key="map_settings_weather_pressure"
		android:layout="@layout/preference_with_descr"
		android:title="@string/map_settings_weather_air_pressure" />

	<net.osmand.plus.settings.preferences.ListPreferenceEx
		android:icon="@drawable/ic_action_wind"
		android:key="map_settings_weather_wind"
		android:layout="@layout/preference_with_descr"
		android:title="@string/map_settings_weather_wind" />

	<net.osmand.plus.settings.preferences.ListPreferenceEx
		android:icon="@drawable/ic_action_clouds"
		android:key="map_settings_weather_cloud"
		android:layout="@layout/preference_with_descr"
		android:title="@string/map_settings_weather_cloud" />

	<net.osmand.plus.settings.preferences.ListPreferenceEx
		android:icon="@drawable/ic_action_precipitation"
		android:key="map_settings_weather_precip"
		android:layout="@layout/preference_with_descr"
		android:title="@string/map_settings_weather_precip" />

	<PreferenceCategory
		android:key="data"
		android:layout="@layout/preference_category_with_descr"
		android:title="@string/data_settings" />

	<Preference
		android:key="weather_online_cache"
		android:layout="@layout/preference_with_descr"
		android:title="@string/weather_online_cache" />

	<Preference
		android:key="weather_offline_forecast"
		android:layout="@layout/preference_with_descr"
		android:title="@string/weather_offline_forecast" />

</PreferenceScreen>