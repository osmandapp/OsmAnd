<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/map_center_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_gravity="center_horizontal|top"
	android:layout_marginTop="@dimen/map_button_margin"
	android:orientation="vertical"
	android:visibility="visible">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<net.osmand.plus.plugins.astro.views.CelestialPathView
			android:id="@+id/celestial_path_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"/>

		<net.osmand.plus.plugins.astro.views.StarAltitudeChartView
			android:id="@+id/star_altitude_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"/>

		<net.osmand.plus.plugins.astro.views.StarVisiblityChartView
			android:id="@+id/star_visiblity_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="gone"/>

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/enter_3d_button"
			android:layout_width="@dimen/standard_icon_size"
			android:layout_height="@dimen/standard_icon_size"
			android:layout_gravity="start|top"
			android:layout_marginHorizontal="@dimen/content_padding"
			android:layout_marginVertical="@dimen/content_padding_small"
			android:scaleType="center"
			android:tint="?attr/icon_color_active"
			app:srcCompat="@drawable/ic_action_world_globe" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/settings_button"
			android:layout_width="@dimen/standard_icon_size"
			android:layout_height="@dimen/standard_icon_size"
			android:layout_gravity="end|top"
			android:layout_marginHorizontal="56dp"
			android:layout_marginVertical="@dimen/content_padding_small"
			android:tint="?attr/icon_color_active"
			app:srcCompat="@drawable/ic_action_settings" />

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/switch_chart_button"
			android:layout_width="@dimen/standard_icon_size"
			android:layout_height="@dimen/standard_icon_size"
			android:layout_gravity="end|top"
			android:layout_marginHorizontal="@dimen/content_padding"
			android:layout_marginVertical="@dimen/content_padding_small"
			android:tint="?attr/icon_color_active"
			app:srcCompat="@drawable/ic_action_layers" />

	</FrameLayout>

</LinearLayout>