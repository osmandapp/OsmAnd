<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/configureViewRoot"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:overScrollMode="never"
	android:paddingBottom="16dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<com.google.android.material.card.MaterialCardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<View
					android:layout_width="16dp"
					android:layout_height="2dp"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="6dp"
					android:layout_marginBottom="2dp"
					android:background="@drawable/rectangle_rounded"
					android:backgroundTint="?attr/secondary_icon_color" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/title"
						style="@style/TitleStyle"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginVertical="12dp"
						android:layout_marginStart="16dp"
						android:layout_weight="1"
						android:text="@string/astro_configure_view"
						android:textColor="?attr/text_color_primary_v2"
						android:textSize="24sp" />

					<FrameLayout
						android:id="@+id/closeBtn"
						android:layout_width="44dp"
						android:layout_height="44dp"
						android:layout_gravity="center"
						android:layout_marginEnd="4dp"
						android:background="?attr/selectableItemBackground">

						<com.google.android.material.imageview.ShapeableImageView
							android:layout_width="24dp"
							android:layout_height="24dp"
							android:layout_gravity="center"
							android:contentDescription="@string/shared_string_close"
							android:foregroundGravity="center"
							android:src="@drawable/ic_action_close_rounded"
							android:tint="?attr/default_icon_color" />

					</FrameLayout>

				</LinearLayout>

				<LinearLayout
					android:id="@+id/topButtonsRow"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:baselineAligned="false"
					android:orientation="horizontal"
					android:paddingHorizontal="10dp"
					android:paddingTop="9dp"
					android:paddingBottom="16dp">

					<include
						android:id="@+id/button_3d"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_weight="1" />

					<include
						android:id="@+id/button_map"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_weight="1" />

					<include
						android:id="@+id/button_red_filter"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_weight="1" />

				</LinearLayout>

				<View
					android:id="@+id/dividerTop"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="?attr/divider_color" />

				<TextView
					android:id="@+id/visibleObjectsTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="16dp"
					android:layout_marginVertical="12dp"
					android:text="@string/astro_visible_objects"
					android:textColor="?attr/text_color_primary_v2"
					android:textSize="16sp" />

				<androidx.gridlayout.widget.GridLayout
					android:id="@+id/visible_objects_grid_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingHorizontal="10dp"
					android:paddingBottom="16dp"
					app:columnCount="3"
					app:useDefaultMargins="false">

					<include
						android:id="@+id/button_solar_system"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						app:layout_columnWeight="1" />

					<include
						android:id="@+id/button_constellations"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						app:layout_columnWeight="1" />

					<include
						android:id="@+id/button_stars"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						app:layout_columnWeight="1" />

					<include
						android:id="@+id/button_nebulas"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_weight="1"
						app:layout_columnWeight="1" />

					<include
						android:id="@+id/button_star_clusters"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_weight="1"
						app:layout_columnWeight="1" />

					<include
						android:id="@+id/button_deep_sky"
						layout="@layout/action_tile_card"
						android:layout_width="0dp"
						android:layout_height="66dp"
						android:layout_marginHorizontal="6dp"
						android:layout_weight="1"
						app:layout_columnWeight="1" />

				</androidx.gridlayout.widget.GridLayout>

			</LinearLayout>

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/personalCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginVertical="12dp"
					android:layout_marginStart="16dp"
					android:text="@string/personal_category_name"
					android:textColor="?attr/text_color_primary_v2"
					android:textSize="16sp" />

				<LinearLayout
					android:id="@+id/personal_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				</LinearLayout>

			</LinearLayout>

		</com.google.android.material.card.MaterialCardView>

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/renderingCard"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginVertical="12dp"
					android:layout_marginStart="16dp"
					android:text="@string/astro_rendering"
					android:textColor="?attr/text_color_primary_v2"
					android:textSize="16sp" />

				<LinearLayout
					android:id="@+id/rendering_content"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

				</LinearLayout>

			</LinearLayout>

		</com.google.android.material.card.MaterialCardView>

	</LinearLayout>

</androidx.core.widget.NestedScrollView>
