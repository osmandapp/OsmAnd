<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/toolbar"
	android:layout_width="match_parent"
	android:layout_height="@dimen/action_bar_height"
	android:orientation="horizontal"
	android:gravity="center_vertical"
	android:background="?attr/actionModeBackground">

	<ImageButton
		android:id="@+id/back_button"
		style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
		android:layout_width="@dimen/action_bar_height"
		android:layout_height="@dimen/action_bar_height"
		android:contentDescription="@string/access_shared_string_navigate_up"
		android:tint="?attr/toolbar_back_button_color"
		app:srcCompat="@drawable/ic_arrow_back" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/title"
		style="@style/TitleStyle.Medium"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:layout_marginStart="@dimen/content_padding"
		android:maxLines="1"
		android:ellipsize="end"
		android:textSize="@dimen/bottom_sheet_title_big"
		android:textColor="?attr/toolbar_title_color"
		tools:text="Download map" />

	<ImageButton
		android:id="@+id/help_button"
		style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
		android:layout_width="@dimen/action_bar_height"
		android:layout_height="@dimen/action_bar_height"
		android:contentDescription="@string/shared_string_help"
		android:tint="?attr/app_bar_primary_item_color"
		app:srcCompat="@drawable/ic_action_help_online" />

</LinearLayout>
