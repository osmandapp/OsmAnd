<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/attach_roads"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:minHeight="@dimen/setting_list_item_large_height"
	android:orientation="horizontal"
	android:paddingTop="@dimen/content_padding_small"
	android:paddingBottom="@dimen/content_padding_half">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/icon"
		android:layout_width="@dimen/standard_icon_size"
		android:layout_height="@dimen/standard_icon_size"
		android:layout_marginStart="@dimen/content_padding"
		android:layout_marginEnd="@dimen/content_padding"
		app:tint="?attr/active_color_basic"
		tools:srcCompat="@drawable/ic_action_attach_track" />

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/content_padding"
		android:layout_marginEnd="@dimen/content_padding"
		android:layout_weight="1"
		android:orientation="vertical">

		<net.osmand.plus.widgets.TextViewEx
			android:id="@+id/title"
			style="@style/TitleStyle.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/active_color_basic"
			tools:text="@string/attach_to_the_roads" />

		<net.osmand.plus.widgets.TextViewEx
			android:id="@+id/description"
			style="@style/DescStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?android:attr/textColorSecondary"
			tools:text="@string/track_attach_to_the_roads_descr" />

	</LinearLayout>

</LinearLayout>