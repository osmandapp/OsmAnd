<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/button"
	android:layout_width="match_parent"
	android:layout_height="@dimen/dialog_button_height"
	android:layout_marginHorizontal="@dimen/content_padding"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/button_container"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center_vertical"
		android:gravity="center"
		android:orientation="horizontal"
		tools:ignore="UselessParent">

		<androidx.appcompat.widget.AppCompatImageView
			android:id="@+id/button_icon"
			android:layout_width="@dimen/map_widget_icon"
			android:layout_height="@dimen/map_widget_icon"
			android:layout_marginHorizontal="@dimen/content_padding_small"
			android:tint="?attr/active_color_basic"
			tools:srcCompat="@drawable/ic_action_appearance" />

		<net.osmand.plus.widgets.TextViewEx
			android:id="@+id/button_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/context_menu_controller_height"
			android:letterSpacing="@dimen/description_letter_spacing"
			android:textColor="?attr/active_color_basic"
			android:textSize="@dimen/default_desc_text_size"
			app:typefaceWeight="medium"
			tools:text="Button" />

	</LinearLayout>

</LinearLayout>