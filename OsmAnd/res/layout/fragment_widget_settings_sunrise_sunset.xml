<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<net.osmand.plus.widgets.TextViewEx
		style="@style/DescStyle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="@dimen/content_padding"
		android:layout_marginVertical="@dimen/content_padding_small"
		android:text="@string/switch_mode_by_tapping_on_widget"
		android:textColor="?android:textColorSecondary" />

	<LinearLayout
		android:id="@+id/sun_position_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:visibility="gone">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/content_padding"
			android:layout_marginVertical="@dimen/content_padding_small"
			android:layout_weight="1"
			android:orientation="vertical">

			<net.osmand.plus.widgets.TextViewEx
				style="@style/TitleStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/shared_string_mode"
				android:textColor="?android:textColorPrimary" />

			<net.osmand.plus.widgets.TextViewEx
				android:id="@+id/sun_position_description"
				style="@style/DescStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="?android:textColorSecondary"
				tools:text="Time left, 05:25 h" />

		</LinearLayout>

	</LinearLayout>

	<include
		android:id="@+id/sun_position_divider"
		layout="@layout/divider"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/content_padding"
		android:visibility="gone" />

	<LinearLayout
		android:id="@+id/preference_container"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginHorizontal="@dimen/content_padding"
			android:layout_marginVertical="@dimen/content_padding_small"
			android:layout_weight="1"
			android:orientation="vertical">

			<net.osmand.plus.widgets.TextViewEx
				style="@style/TitleStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/shared_string_show"
				android:textColor="?android:textColorPrimary" />

			<net.osmand.plus.widgets.TextViewEx
				android:id="@+id/preference_description"
				style="@style/DescStyle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="?android:textColorSecondary"
				tools:text="Time left, 05:25 h" />

		</LinearLayout>

	</LinearLayout>

</LinearLayout>