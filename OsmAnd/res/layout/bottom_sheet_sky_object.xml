<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/bg_color"
    android:paddingBottom="16dp"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/drag_handle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/sheet_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceHeadline6"
            tools:text="Sirius" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/sheet_favorite_button"
            style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/selector_favorite_button"
            app:buttonTint="@color/selector_favorite_button" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/sheet_pin_button"
            style="@style/Widget.MaterialComponents.CompoundButton.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/shared_string_close"
            android:src="@drawable/ic_action_close"
            app:tint="?android:attr/textColorSecondary" />

    </LinearLayout>

    <TextView
        android:id="@+id/sheet_coords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Azimuth: 12.3°  •  Altitude: 45.6°" />

    <TextView
        android:id="@+id/sheet_magnitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Magnitude: -1.46" />

    <TextView
        android:id="@+id/sheet_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Distance: 8.6 light years" />

    <TextView
        android:id="@+id/sheet_rise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Rise: ↑08:00"/>

    <TextView
        android:id="@+id/sheet_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:text="Set: ↓20:00"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sheet_wiki_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:text="@string/shared_string_wikipedia" />

</LinearLayout>
