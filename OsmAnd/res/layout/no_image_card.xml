<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingTop="16dp"
	android:paddingHorizontal="@dimen/content_padding"
	android:paddingBottom="10dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<ImageView
			android:id="@+id/icon"
			android:layout_width="24dp"
			android:layout_height="24dp"
			android:layout_gravity="top"
			android:src="@drawable/ic_action_desert"
			app:tint="?attr/default_icon_color" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingHorizontal="24dp">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="6dp"
				android:text="@string/no_photos_available"
				android:textColor="?android:textColorPrimary"
				android:textSize="@dimen/default_list_text_size"
				android:textStyle="bold" />

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/no_photos_available_descr"
				android:textColor="?android:textColorSecondary"
				android:textSize="@dimen/default_desc_text_size" />

		</LinearLayout>

	</LinearLayout>

	<FrameLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/mapillary_add_photos"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_gravity="bottom|center_horizontal"
			android:layout_marginHorizontal="48dp"
			android:layout_marginVertical="16dp"
			android:background="@drawable/blue_button_drawable"
			android:drawablePadding="@dimen/content_padding_half"
			android:paddingStart="10dp"
			android:paddingEnd="14dp"
			android:text="@string/shared_string_add_photos"
			android:textColor="@color/card_and_list_background_light"
			android:visibility="gone"
			app:backgroundTint="@color/mapillary_color"
			app:drawableLeftCompat="@drawable/ic_action_mapillary"
			app:drawableStartCompat="@drawable/ic_action_mapillary" />

	</FrameLayout>

</LinearLayout>