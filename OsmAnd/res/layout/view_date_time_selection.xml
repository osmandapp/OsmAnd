<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="#AA000000"
	android:gravity="center"
	android:orientation="horizontal"
	android:padding="8dp"
	android:clickable="true"
	android:focusable="true">

	<!-- Year -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/btn_year_up"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Increase Year"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_up"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />

		<TextView
			android:id="@+id/tv_year"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="monospace"
			android:paddingVertical="4dp"
			android:text="2025"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/btn_year_down"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Decrease Year"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_down"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />
	</LinearLayout>

	<Space
		android:layout_width="4dp"
		android:layout_height="match_parent" />

	<!-- Month -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/btn_month_up"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Increase Month"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_up"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />

		<TextView
			android:id="@+id/tv_month"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="monospace"
			android:paddingVertical="4dp"
			android:text="11"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/btn_month_down"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Decrease Month"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_down"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />
	</LinearLayout>

	<Space
		android:layout_width="4dp"
		android:layout_height="match_parent" />

	<!-- Day -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/btn_day_up"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Increase Day"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_up"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />

		<TextView
			android:id="@+id/tv_day"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="monospace"
			android:paddingVertical="4dp"
			android:text="23"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/btn_day_down"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Decrease Day"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_down"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />
	</LinearLayout>

	<Space
		android:layout_width="8dp"
		android:layout_height="match_parent" />

	<!-- Hour -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/btn_hour_up"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Increase Hour"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_up"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />

		<TextView
			android:id="@+id/tv_hour"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="monospace"
			android:paddingVertical="4dp"
			android:text="15"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/btn_hour_down"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Decrease Hour"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_down"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />
	</LinearLayout>

	<Space
		android:layout_width="4dp"
		android:layout_height="match_parent" />

	<!-- Minute -->
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="vertical">

		<ImageView
			android:id="@+id/btn_minute_up"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Increase Minute"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_up"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />

		<TextView
			android:id="@+id/tv_minute"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="monospace"
			android:paddingVertical="4dp"
			android:text="30"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold" />

		<ImageView
			android:id="@+id/btn_minute_down"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:background="?attr/selectableItemBackgroundBorderless"
			android:contentDescription="Decrease Minute"
			android:padding="8dp"
			android:src="@drawable/ic_action_arrow_down"
			app:tint="@android:color/white"
			xmlns:app="http://schemas.android.com/apk/res-auto" />
	</LinearLayout>

</LinearLayout>