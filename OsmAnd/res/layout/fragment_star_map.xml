<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/color_transparent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<!-- Toolbar -->
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/app_bar_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="?attr/appbar_and_list_background_color"
			android:elevation="5dp">

			<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="@dimen/toolbar_height"
				android:fitsSystemWindows="false"
				android:gravity="center_vertical"
				app:title="@string/star_map" >

				<ImageButton
					android:id="@+id/settings_button"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_gravity="end"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:contentDescription="@string/visible_layers_and_objects"
					app:srcCompat="@drawable/ic_action_settings"
					app:tint="@color/icon_color_default_light" />

				<ImageButton
					android:id="@+id/star_chart_button"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_gravity="end"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:contentDescription="@string/star_charts_name"
					app:srcCompat="@drawable/ic_action_layers"
					app:tint="@color/icon_color_default_light" />

				<ImageButton
					android:id="@+id/star_map_button"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:layout_gravity="end"
					android:background="?attr/selectableItemBackgroundBorderless"
					android:contentDescription="@string/star_map"
					app:srcCompat="@drawable/ic_action_world_globe"
					app:tint="@color/icon_color_default_light" />

			</androidx.appcompat.widget.Toolbar>
		</com.google.android.material.appbar.AppBarLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">

			<net.osmand.plus.plugins.astro.views.StarView
				android:id="@+id/star_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />

			<!-- Camera Overlay (On top of StarView) -->
			<TextureView
				android:id="@+id/camera_view"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:alpha="0.5"
				android:visibility="gone"/>

			<!-- New Time Control Custom View -->
			<net.osmand.plus.plugins.astro.views.DateTimeSelectionView
				android:id="@+id/time_selection_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top|center_horizontal"
				android:layout_marginTop="8dp" />

			<!-- Reset Time Button -->
			<Button
				android:id="@+id/reset_time_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Now"
				android:textSize="12sp"
				android:minHeight="36dp"
				android:layout_gravity="top|center_horizontal"
				android:layout_marginTop="140dp"
				android:visibility="gone"/>

			<!-- Compass Button (Top Left) -->
			<FrameLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<include
					layout="@layout/star_map_compass_button"
					android:layout_width="@dimen/map_small_button_size"
					android:layout_height="@dimen/map_small_button_size"
					android:layout_marginStart="@dimen/map_button_margin"
					android:layout_marginTop="@dimen/map_small_button_margin" />

			</FrameLayout>

			<!-- Right Side Controls (AR, Camera, Slider, FOV) -->
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top|end"
				android:layout_marginTop="@dimen/map_small_button_margin"
				android:layout_marginEnd="@dimen/map_button_margin"
				android:orientation="vertical"
				android:gravity="center_horizontal">

				<!-- AR Mode Button -->
				<ImageButton
					android:id="@+id/ar_mode_button"
					android:layout_width="@dimen/map_small_button_size"
					android:layout_height="@dimen/map_small_button_size"
					android:background="@drawable/btn_circle"
					android:contentDescription="AR Mode"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:elevation="4dp"
					app:srcCompat="@drawable/ic_action_map_pan"
					app:tint="#5f6e7c" />

				<!-- Camera Overlay Button -->
				<ImageButton
					android:id="@+id/camera_button"
					android:layout_width="@dimen/map_small_button_size"
					android:layout_height="@dimen/map_small_button_size"
					android:layout_marginTop="12dp"
					android:background="@drawable/btn_circle"
					android:contentDescription="Camera Overlay"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:elevation="4dp"
					app:srcCompat="@drawable/ic_action_device_camera"
					app:tint="#5f6e7c" />

				<!-- Vertical Slider Container -->
				<FrameLayout
					android:id="@+id/slider_container"
					android:layout_width="40dp"
					android:layout_height="150dp"
					android:layout_marginTop="8dp"
					android:visibility="gone">

					<!-- Rotated SeekBar to make it vertical -->
					<SeekBar
						android:id="@+id/transparency_slider"
						android:layout_width="150dp"
						android:layout_height="40dp"
						android:layout_gravity="center"
						android:rotation="270"
						android:progress="50"
						android:max="100" />
				</FrameLayout>

				<!-- Reset FOV Button -->
				<ImageButton
					android:id="@+id/reset_fov_button"
					android:layout_width="@dimen/map_small_button_size"
					android:layout_height="@dimen/map_small_button_size"
					android:layout_marginTop="8dp"
					android:background="@drawable/btn_circle"
					android:contentDescription="Reset FOV"
					android:padding="12dp"
					android:scaleType="fitCenter"
					android:elevation="4dp"
					android:visibility="gone"
					app:srcCompat="@drawable/ic_action_reset_to_default_dark"
					app:tint="#5f6e7c" />

			</LinearLayout>

			<FrameLayout
				android:id="@+id/star_map_controls_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginHorizontal="@dimen/content_padding_half"
				android:layout_marginBottom="@dimen/content_padding_small_half">

				<include
					layout="@layout/map_hud_controls"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end|bottom" />

			</FrameLayout>

			<FrameLayout
				android:id="@+id/map_controls_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom"
				android:layout_marginHorizontal="@dimen/content_padding_half"
				android:layout_marginBottom="@dimen/content_padding_small_half"
				android:visibility="gone">

				<include
					layout="@layout/map_hud_controls"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="end|bottom" />

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom|start"
					android:layout_marginStart="@dimen/map_button_spacing"
					android:orientation="vertical">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						tools:ignore="UselessParent">

						<include
							layout="@layout/map_ruler"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="start|bottom" />

					</LinearLayout>

				</LinearLayout>

			</FrameLayout>

		</FrameLayout>

		<LinearLayout
			android:id="@+id/star_charts_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:orientation="vertical"
			android:background="#424242"
			android:visibility="gone">

			<include layout="@layout/star_charts_content" />

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/bottom_sheet"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="vertical"
		android:padding="16dp"
		android:background="?attr/card_and_list_background_basic"
		android:visibility="gone">

		<TextView
			android:id="@+id/sheet_title"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="22sp"
			android:textStyle="bold"
			android:textColor="?android:textColorPrimary" />

		<TextView
			android:id="@+id/sheet_coords"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="4dp"
			android:textSize="14sp"
			android:textColor="?android:textColorSecondary" />

		<View
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginTop="12dp"
			android:layout_marginBottom="12dp"
			android:background="?android:listDivider" />

		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:columnCount="2"
			android:rowCount="2">

			<TextView
				android:id="@+id/sheet_magnitude"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_marginBottom="8dp"
				android:drawablePadding="8dp"
				android:gravity="center_vertical"
				android:text="Mag: 2.89"
				app:drawableStartCompat="@drawable/ic_action_favorite"
				app:drawableTint="@color/osmand_orange" />
			<TextView
				android:id="@+id/sheet_distance"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:layout_marginBottom="8dp"
				android:drawablePadding="8dp"
				android:gravity="center_vertical"
				android:text="4.2 AU" />

			<TextView
				android:id="@+id/sheet_rise_time"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:textColor="?android:textColorSecondary"
				android:text="Rise: 22:40" />

			<TextView
				android:id="@+id/sheet_set_time"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_columnWeight="1"
				android:textColor="?android:textColorSecondary"
				android:text="Set: 06:00" />
		</GridLayout>

		<Button
			android:id="@+id/sheet_wiki_button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="16dp"
			android:text="View on Wikidata"
			style="@style/Widget.AppCompat.Button.Colored" />

	</LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>