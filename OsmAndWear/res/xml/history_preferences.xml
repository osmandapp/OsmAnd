<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:description="@string/dialogs_and_notifications_descr"
	android:key="dialogs_and_notifications"
	android:title="@string/shared_string_history">

	<Preference
		android:key="history_preferences_info"
		android:layout="@layout/preference_info"
		android:persistent="false"
		android:selectable="false"
		android:title="@string/history_preferences_descr" />

	<Preference
		android:key="search_history"
		android:layout="@layout/preference_with_descr"
		android:persistent="false"
		android:title="@string/shared_string_search_history"
		tools:icon="@drawable/ic_action_search_dark" />

	<Preference
		android:key="navigation_history"
		android:layout="@layout/preference_with_descr"
		android:persistent="false"
		android:title="@string/navigation_history"
		tools:icon="@drawable/ic_action_gdirections_dark" />

	<Preference
		android:key="map_markers_history"
		android:layout="@layout/preference_with_descr"
		android:persistent="false"
		android:title="@string/map_markers_history"
		tools:icon="@drawable/ic_action_flag" />

	<Preference
		android:layout="@layout/list_item_divider"
		android:selectable="false" />

	<Preference
		android:key="actions"
		android:layout="@layout/preference_with_descr"
		android:persistent="false"
		android:selectable="false"
		android:summary="@string/history_actions_descr"
		android:title="@string/shared_string_actions" />

	<Preference
		android:key="backup_to_file"
		android:layout="@layout/preference_button"
		android:persistent="false"
		android:title="@string/backup_into_file"
		tools:icon="@drawable/ic_action_read_from_file" />

	<Preference
		android:layout="@layout/divider_half_item_with_background"
		android:selectable="false" />

	<Preference
		android:key="clear_all_history"
		android:layout="@layout/preference_button"
		android:persistent="false"
		android:title="@string/clear_all_history"
		tools:icon="@drawable/ic_action_delete_dark" />

	<Preference
		android:layout="@layout/card_bottom_divider"
		android:selectable="false" />

</PreferenceScreen>