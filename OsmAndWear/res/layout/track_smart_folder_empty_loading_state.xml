<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:padding="@dimen/dialog_content_margin">

	<me.zhanghai.android.materialprogressbar.MaterialProgressBar
		android:id="@+id/progressBar"
		style="@style/Widget.MaterialProgressBar.ProgressBar.NoPadding"
		android:layout_width="@dimen/acceptable_touch_radius"
		android:layout_height="@dimen/acceptable_touch_radius"
		android:layout_gravity="center"
		android:layout_marginVertical="@dimen/dialog_content_margin"
		android:indeterminate="true"
		android:visibility="visible"
		app:mpb_progressStyle="circular"
		app:mpb_setBothDrawables="true"
		app:mpb_useIntrinsicPadding="false" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/title"
		style="@style/TitleStyle.Medium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/content_padding_small_half"
		android:gravity="center"
		android:textColor="?android:attr/textColorPrimary"
		tools:text="@string/no_visible_tracks" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/description"
		style="@style/DescStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/content_padding"
		android:gravity="center"
		android:textColor="?android:attr/textColorSecondary"
		tools:text="@string/empty_tracks_description" />

</LinearLayout>