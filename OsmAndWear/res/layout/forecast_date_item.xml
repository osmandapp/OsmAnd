<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="@dimen/card_title_row_min_height"
	android:layout_height="@dimen/favorites_icon_outline_size"
	android:layout_marginStart="@dimen/content_padding_half">

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/outlineRect"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:srcCompat="@drawable/bg_select_group_button_outline_small" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:orientation="vertical">

		<net.osmand.plus.widgets.TextViewEx
			android:id="@+id/title"
			style="@style/DescStyle.Medium"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?attr/active_color_basic"
			tools:text="@string/today" />

		<net.osmand.plus.widgets.TextViewEx
			android:id="@+id/description"
			style="@style/DescStyle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="?android:textColorSecondary"
			tools:text="Sat" />

	</LinearLayout>

</FrameLayout>