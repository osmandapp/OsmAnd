<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	android:padding="@dimen/dialog_content_margin">

	<ImageView
		android:id="@+id/icon"
		android:layout_width="@dimen/icon_size_double"
		android:layout_height="@dimen/icon_size_double"
		android:layout_marginVertical="@dimen/dialog_content_margin"
		tools:src="@drawable/ic_action_folder_add"
		tools:tint="@color/icon_color_default_light" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/title"
		style="@style/TitleStyle.Medium"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/content_padding_small_half"
		android:gravity="center"
		android:textColor="?android:attr/textColorPrimary"
		tools:text="@string/no_visible_tracks" />

	<net.osmand.plus.widgets.TextViewEx
		android:id="@+id/description"
		style="@style/DescStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/content_padding"
		android:gravity="center"
		android:textColor="?android:attr/textColorSecondary"
		tools:text="@string/empty_tracks_description" />

	<net.osmand.plus.widgets.dialogbutton.DialogButton
		android:id="@+id/action_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:dialogButtonBottomMargin="@dimen/content_padding_small"
		app:dialogButtonType="secondary"
		tools:dialogButtonTitle="@string/shared_string_import"/>

</LinearLayout>